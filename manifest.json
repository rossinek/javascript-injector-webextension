{
  "manifest_version": 2,
  "name": "Javascript Injector",
  "version": "1.0",

  "browser_specific_settings": {
    "gecko": {
      "id": "javascript-injector@arturrosa.pl",
      "strict_min_version": "59.0a1"
    }
  },

  "description": "Evaluate JS code on pages at a given domain",
  "icons": {
    "48": "icons/js-48.png"
  },
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": {
      "48": "icons/js-48.png"
    },
    "default_title": "Javascript Injector",
    "default_popup": "dist/popup/index.html"
  },
  "background": {
    "scripts": ["dist/background/background.js"]
  }
}
